<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <template id="dating_survey" name="Dating Survey" page="True">
        <t t-call="website.layout">
            <div class="container mt16 mb16">
                <div class="col-md-12">
                    <div id="main" class="well">
                        <h1 t-esc="survey.name" class="text-center"/>
                        <form method="GET" action="/dating/survey/process">
                            <h2 class="text-center"> <t t-esc="page.name"/> <t t-esc="page_number"/> / <t t-esc="max_pages"/></h2>
                            <t t-foreach="page.question_ids" t-as="question">
                                <div class="form-group">
    		                    <label class="control-label" t-attf-for="question_#{question.id}"><t t-esc="question.name"/></label>
			            <select class="form-control" t-attf-name="question_#{question.id}">
			                <t t-foreach="question.option_ids" t-as="option">
			                    <option t-attf-value="#{option.id}"><t t-esc="option.name"/></option>
			                </t>
		    	            </select>
		                </div>
                            </t>
                            <input type="hidden" name="survey_token" t-attf-value="#{survey_token}"/>
                            <input type="hidden" name="page_number" t-attf-value="#{page_number}"/>
                            <input type="hidden" name="survey_id" t-attf-value="#{survey.id}"/>
                            <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </t>
    </template>

</odoo>
