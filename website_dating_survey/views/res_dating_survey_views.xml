<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

      <record id=">res_dating_survey_view_form" model="ir.ui.view">
          <field name="name">res.dating.survey.view.form</field>
          <field name="model">res.dating.survey</field>
          <field name="arch" type="xml">
      	      <form>
      	          <header>
      	              <button type="object" name="create_fake_survey_answers" string="Create Fake Survey Answers"/>
      	              <button type="object" name="survey_preview" string="Preview"/>
      	          </header>
      	          <group>
      	              <field name="name"/>
      	              <field name="page_ids"/>
      	          </group>
      	      </form>
      	  </field>
      </record>

      <record id=">res_dating_survey_page_view_form" model="ir.ui.view">
          <field name="name">res.dating.survey.page.view.form</field>
          <field name="model">res.dating.survey.page</field>
          <field name="arch" type="xml">
      	      <form>
      	          <group>
      	              <field name="name"/>
      	              <field name="question_ids">
      	                  <tree>
      	                      <field name="partner_field_id"/>
      	                      <field name="type"/>
      	                      <field name="name"/>
      	                      <field name="option_ids"/>
      	                  </tree>
      	              </field>
      	          </group>
      	      </form>
      	  </field>
      </record>

      <record id=">res_dating_survey_page_question_view_form" model="ir.ui.view">
          <field name="name">res.dating.survey.page.question.view.form</field>
          <field name="model">res.dating.survey.page.question</field>
          <field name="arch" type="xml">
      	      <form>
      	          <group>
      	              <field name="partner_field_id"/>
      	              <field name="type"/>
      	              <field name="name"/>
      	              <field name="option_ids">
      	                  <tree editable="bottom">
      	                      <field name="name"/>
      	                      <field name="value"/>
      	                  </tree>
      	              </field>
      	          </group>
      	      </form>
      	  </field>
      </record>
      
      <record id=">res_dating_survey_view_tree" model="ir.ui.view">
          <field name="name">res.dating.survey.view.tree</field>
          <field name="model">res.dating.survey</field>
          <field name="arch" type="xml">
      	      <tree>
      	          <field name="name"/>
      	      </tree>
      	  </field>
      </record>

      <record id="res_dating_survey_action" model="ir.actions.act_window">
          <field name="name">Dating Survey</field>
      	  <field name="res_model">res.dating.survey</field>
      	  <field name="view_type">form</field>
      	  <field name="view_mode">tree,form</field>
      </record>
      
    </data>
</openerp>