<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sem_client_website_page_view_form" model="ir.ui.view">
        <field name="name">sem.client.website.page form view</field>
        <field name="model">sem.client.website.page</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="check_webpage_wrapper" type="object" string="Check Webpage"/>
                </header>
                <group>
                    <field name="website_id" invisible="True"/>
                    <field name="url" widget="url"/>
                    <field name="active"/>
                    <field name="page_report_ids">
                        <tree>
                            <field name="create_date"/>
                            <field name="check_ids"/>
                        </tree>
                    </field>
                </group>
            </form>
        </field>
    </record>

    <record id="sem_client_website_page_view_search" model="ir.ui.view">
        <field name="name">sem.client.website.page search view</field>
        <field name="model">sem.client.website.page</field>
        <field name="arch" type="xml">
            <search>
                <field name="website_id"/>
            </search>
        </field>
    </record>

    <record id="sem_client_website_page_action" model="ir.actions.act_window">
        <field name="name">SEM Client Website Page</field>
        <field name="res_model">sem.client.website.page</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>