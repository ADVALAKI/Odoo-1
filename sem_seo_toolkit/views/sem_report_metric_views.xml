<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sem_report_metric_view_form" model="ir.ui.view">
        <field name="name">sem.report.metric form view</field>
        <field name="model">sem.report.metric</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="url"/>
                    <field name="result_ids">
                        <tree>
                            <field name="metric_id"/>
                            <field name="value"/>
                        </tree>
                    </field>
                </group>
            </form>
        </field>
    </record>

    <record id="sem_report_metric_view_tree" model="ir.ui.view">
        <field name="name">sem.report.metric tree view</field>
        <field name="model">sem.report.metric</field>
        <field name="arch" type="xml">
            <tree>
                <field name="url"/>
            </tree>
        </field>
    </record>

    <record id="sem_report_metric_action" model="ir.actions.act_window">
        <field name="name">SEM Metric Report</field>
        <field name="res_model">sem.report.metric</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>