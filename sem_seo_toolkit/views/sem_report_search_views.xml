<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <report file="sem_seo_toolkit.seo_pdf_search_report" name="sem_seo_toolkit.seo_pdf_search_report" report_type="qweb-pdf" string="SEO Search Report" model="sem.report.search" id="seo_pdf_report_search_report"/>

    <record id="sem_report_search_view_form" model="ir.ui.view">
        <field name="name">sem.report.search form view</field>
        <field name="model">sem.report.search</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="website_id"/>
                    <field name="result_ids">
                        <tree>
                            <field name="keyword_id"/>
                            <field name="geo_target_id"/>
                            <field name="monthly_searches"/>
                            <field name="competition"/>
                        </tree>
                    </field>
                </group>
            </form>
        </field>
    </record>

    <record id="sem_report_search_view_tree" model="ir.ui.view">
        <field name="name">sem.report.search tree view</field>
        <field name="model">sem.report.search</field>
        <field name="arch" type="xml">
            <tree>
                <field name="website_id"/>
            </tree>
        </field>
    </record>

    <record id="sem_report_search_action" model="ir.actions.act_window">
        <field name="name">SEM Search Report</field>
        <field name="res_model">sem.report.search</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>