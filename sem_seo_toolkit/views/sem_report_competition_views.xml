<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sem_report_competition_view_form" model="ir.ui.view">
        <field name="name">sem.report.competition form view</field>
        <field name="model">sem.report.competition</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="client_id"/>
                    <field name="ranking_ids">
                        <tree>
                            <field name="position"/>
                            <field name="title"/>
                            <field name="link"/>
                        </tree>
                    </field>
                </group>
            </form>
        </field>
    </record>

    <record id="sem_report_competition_view_tree" model="ir.ui.view">
        <field name="name">sem.report.competition tree view</field>
        <field name="model">sem.report.competition</field>
        <field name="arch" type="xml">
            <tree>
                <field name="client_id"/>
            </tree>
        </field>
    </record>

    <record id="sem_report_competition_action" model="ir.actions.act_window">
        <field name="name">SEO Competition Report</field>
        <field name="res_model">sem.report.competition</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>