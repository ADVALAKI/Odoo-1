<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sem_search_results_view_form" model="ir.ui.view">
        <field name="name">sem.search.results form view</field>
        <field name="model">sem.search.results</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="competition_report" type="object" string="Competitor Report"/>
                </header>
                <group>
                    <field name="search_context_id"/>
                    <field name="search_url" widget="url"/>
                    <field name="result_ids">
                        <tree editable="bottom">
                            <field name="position"/>
                            <field name="name"/>
                            <field name="url"/>
                            <field name="snippet"/>
                        </tree>
                    </field>
                </group>
            </form>
        </field>
    </record>

    <record id="sem_search_results_view_tree" model="ir.ui.view">
        <field name="name">sem.search.results tree view</field>
        <field name="model">sem.search.results</field>
        <field name="arch" type="xml">
            <tree>
                <field name="search_context_id"/>
                <field name="search_url"/>
            </tree>
        </field>
    </record>

    <record id="sem_search_results_action" model="ir.actions.act_window">
        <field name="name">Search Results</field>
        <field name="res_model">sem.search.results</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>