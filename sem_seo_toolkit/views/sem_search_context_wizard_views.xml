<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sem_search_context_wizard_view_form" model="ir.ui.view">
        <field name="name">sem.search.context.wizard form view</field>
        <field name="model">sem.search.context.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="website_id" invisible="True"/>
                    <field name="type" invisible="True"/>
                    <field name="keyword_ids">
                        <tree editable="bottom">
                            <field name="name"/>
                        </tree>
                    </field>
                    <field name="device_ids">
                        <tree>
                            <field name="name"/>
                        </tree>
                    </field>
                    <field name="search_engine_id"/>
                    <field name="location_string"/>
                    <field name="suggestion_id"/>
                    <field name="geo_target_ids">
                        <tree>
                            <field name="name"/>
                            <field name="latitude"/>
                            <field name="longitude"/>
                        </tree>
                    </field>
                    <field name="map_zoom_level" attrs="{'invisible':[('type', '!=', 'map')]}"/>
                </group>
                <footer>
                    <button name="add_search_contexts" type="object" string="Add Search Contexts" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="sem_search_context_wizard_geo_view_tree" model="ir.ui.view">
        <field name="name">sem.search.context.wizard.geo tree view</field>
        <field name="model">sem.search.context.wizard.geo</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="latitude"/>
                <field name="longitude"/>
            </tree>
        </field>
    </record>

</odoo>