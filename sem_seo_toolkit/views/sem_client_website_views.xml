<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sem_client_website_view_form" model="ir.ui.view">
        <field name="name">sem.client.website form view</field>
        <field name="model">sem.client.website</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="search_report" type="object" string="Search Report"/>
                    <button name="google_my_business_report" type="object" string="Google My Business Report"/>
                    <button name="check_website" type="object" string="Check Website"/>
                    <button name="read_sitemap" type="object" string="Read Sitemap"/>
                    <button name="add_search_context" type="object" string="Create Search Context"/>
                </header>
                <div class="oe_button_box" name="button_box">
                    <button class="oe_inline oe_stat_button" type="action" name="%(sem_client_website_page_action)d" 
                        context="{'search_default_website_id': active_id, 'default_website_id': active_id}"
                        icon="fa-file-text">
                        <field name="page_count" string="Webpages" widget="statinfo"/>
                    </button>
                </div>
                <group>
                    <field name="client_id"/>
                    <field name="url"/>
                    <field name="search_context_ids">
                        <tree>
                            <field name="search_engine_id"/>
                            <field name="keyword"/>
                            <field name="geo_target_name"/>
                            <field name="device_id"/>
                        </tree>
                    </field>
                </group>
            </form>
        </field>
    </record>

    <record id="sem_client_website_view_tree" model="ir.ui.view">
        <field name="name">sem.client.website tree view</field>
        <field name="model">sem.client.website</field>
        <field name="arch" type="xml">
            <tree>
                <field name="client_id"/>
                <field name="url"/>
            </tree>
        </field>
    </record>

    <record id="sem_client_website_view_search" model="ir.ui.view">
        <field name="name">sem.client.website search view</field>
        <field name="model">sem.client.website</field>
        <field name="arch" type="xml">
            <search>
                <field name="client_id"/>
            </search>
        </field>
    </record>

    <record id="sem_client_website_action" model="ir.actions.act_window">
        <field name="name">SEM Client Website</field>
        <field name="res_model">sem.client.website</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>