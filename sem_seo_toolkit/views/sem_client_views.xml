<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sem_client_view_form" model="ir.ui.view">
        <field name="name">sem.client form view</field>
        <field name="model">sem.client</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="partner_id"/>
                    <field name="website_ids">
                        <tree editable="bottom">
                            <field name="url"/>
                        </tree>
                    </field>
                </group>
            </form>
        </field>
    </record>

    <record id="sem_client_view_tree" model="ir.ui.view">
        <field name="name">sem.client tree view</field>
        <field name="model">sem.client</field>
        <field name="arch" type="xml">
            <tree>
                <field name="partner_id"/>
            </tree>
        </field>
    </record>

    <record id="sem_client_action" model="ir.actions.act_window">
        <field name="name">SEM Client</field>
        <field name="res_model">sem.client</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>