<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sem_client_view_form" model="ir.ui.view">
        <field name="name">sem.client form view</field>
        <field name="model">sem.client</field>
        <field name="arch" type="xml">
            <form>
                <div class="oe_button_box" name="button_box">
                    <button class="oe_inline oe_stat_button" type="action" name="%(sem_client_website_action)d" 
                        context="{'search_default_client_id': active_id, 'default_client_id': active_id}"
                        icon="fa-sitemap">
                        <field name="website_count" string="Websites" widget="statinfo"/>
                    </button>
                </div>
                <group>
                    <field name="partner_id"/>
                </group>
            </form>
        </field>
    </record>

    <record id="sem_client_view_tree" model="ir.ui.view">
        <field name="name">sem.client tree view</field>
        <field name="model">sem.client</field>
        <field name="arch" type="xml">
            <tree>
                <field name="partner_id"/>
            </tree>
        </field>
    </record>

    <record id="sem_client_action" model="ir.actions.act_window">
        <field name="name">SEM Client</field>
        <field name="res_model">sem.client</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>