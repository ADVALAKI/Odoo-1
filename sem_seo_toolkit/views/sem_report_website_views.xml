<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <report id="sem_report_website_report" name="sem_seo_toolkit.sem_report_website_pdf" file="sem_seo_toolkit.sem_report_website_pdf" model="sem.report.website" report_type="qweb-pdf" string="Website Report"/>

    <record id="sem_report_website_view_form" model="ir.ui.view">
        <field name="name">sem.report.website form view</field>
        <field name="model">sem.report.website</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="website_id"/>
                    <field name="check_ids">
                        <tree>
                            <field name="check_id"/>
                            <field name="check_pass"/>
                            <field name="notes"/>
                            <field name="time"/>
                        </tree>
                    </field>
                    <field name="page_ids">
                        <tree>
                            <field name="page_id"/>
                        </tree>
                    </field>
                </group>
            </form>
        </field>
    </record>

    <record id="sem_report_website_view_tree" model="ir.ui.view">
        <field name="name">sem.report.website tree view</field>
        <field name="model">sem.report.website</field>
        <field name="arch" type="xml">
            <tree>
                <field name="create_date"/>
                <field name="website_id"/>
            </tree>
        </field>
    </record>

    <record id="sem_report_website_action" model="ir.actions.act_window">
        <field name="name">Website Report</field>
        <field name="res_model">sem.report.website</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>