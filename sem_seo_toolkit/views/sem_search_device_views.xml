<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sem_search_device_view_form" model="ir.ui.view">
        <field name="name">sem.search.device form view</field>
        <field name="model">sem.search.device</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="user_agent"/>
                </group>
            </form>
        </field>
    </record>

    <record id="sem_search_device_view_tree" model="ir.ui.view">
        <field name="name">sem.search.device tree view</field>
        <field name="model">sem.search.device</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="user_agent"/>
            </tree>
        </field>
    </record>

    <record id="sem_search_device_action" model="ir.actions.act_window">
        <field name="name">Devices</field>
        <field name="res_model">sem.search.device</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>