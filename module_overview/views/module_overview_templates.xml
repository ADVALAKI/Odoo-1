<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <template id="pick_module" name="Pick Module" page="True">
            <t t-call="website.layout">
                <div class="container">

                    <div class="mt16 mb16">
                        <h1 class="text-center">Enter Module Name</h1>
                    </div>

                    <div class="col-md-12">
                        <form action="/module/overview" method="POST" class="form-horizontal mt32" enctype="multipart/form-data">
                            <div class="form-group">
                                <label class="col-md-2 control-label" for="upload">Upload Module Zip</label>
                                <div class="col-md-2">
                                    <input type="file" name="upload" required="True"/>
                                </div>
                                <div class="col-md-1">
                                    <button t-attf-class="btn btn-default btn-md">Check</button>
                                </div>
                            </div>
                        </form>
                        <t t-if="overview">

                            <!-- Security Access Panel -->
                            <div class="panel-group">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h4 class="panel-title">
                                            <a data-toggle="collapse" href="#accesscollapse">Security Access</a>
                                        </h4>
                                    </div>
                                </div>
                                <div id="accesscollapse" class="panel-collapse collapse">
                                    <div class="panel-body">
                                        <table class="table table-striped">
                                            <tr><th>Name</th><th>XML ID</th><th>Model</th><th>Group</th><th>Permissions</th></tr>
				            <t t-foreach="overview.access_ids" t-as="access">
					        <tr><td><t t-esc="access.name"/></td><td><t t-esc="access.x_id"/></td><td><t t-esc="access.model"/></td><td><t t-esc="access.group"/></td><td><t t-esc="access.access_string"/></td></tr>
			                    </t>          
                                        </table>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Menu Panel -->
                            <div class="panel-group">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h4 class="panel-title">
                                            <a data-toggle="collapse" href="#menucollapse">Menus</a>
                                        </h4>
                                    </div>
                                </div>
                                <div id="menucollapse" class="panel-collapse collapse">
                                    <div class="panel-body">
                                        <table class="table table-striped">
                                            <tr><th>Name</th><th>XML ID</th><th>Parent</th></tr>
				            <t t-foreach="overview.menu_ids" t-as="menu">
					        <tr><td><t t-esc="menu.name"/></td><td><t t-esc="menu.x_id"/></td><td><t t-esc="menu.parent"/></td></tr>
			                    </t>          
                                        </table>
                                    </div>
                                </div>
                            </div>

                            <!-- Model Panel -->
                            <h2>Models  (<t t-esc="overview.model_count"/>)</h2>
                        <div class="panel-group">
                            <t t-foreach="overview.models_ids" t-as="model">
                                
                                <!-- Each Model has it's own tab -->
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h2 class="panel-title">
                                            <a data-toggle="collapse" t-attf-href="##{model.id}"><t t-esc="model.name"/></a>
                                        </h2>
                                    </div>
                                    <div t-attf-id="#{model.id}" class="panel-collapse collapse">
                                        <div class="panel-body">
					    
					    <!-- Each module has a panel inside it for fields, view and security -->
					    <div class="panel-group">
					        
					        <!-- All the view inside a model -->
					        <div class="panel panel-default">
					            <div class="panel-heading">
					                <h2 class="panel-title">
					                    <a data-toggle="collapse" t-attf-href="##{model.id}_views">Views</a>
					                </h2>
                                                    </div>
                                                    <div t-attf-id="#{model.id}_views" class="panel-collapse collapse">
						        <ul class="list-group">
						            <t t-foreach="model.view_ids" t-as="view">
							        <li class="list-group-item"><t t-esc="view.name"/> (<t t-esc="view.x_id"/>)</li>
			                                    </t>
                                                        </ul>      
                                                    </div>
                                                </div>
                                                
                                                <!-- All the fields inside a Model -->
                                                <div>
                                                </div>
                                                
					    </div>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                        </t>
                    </div>
                </div>
            </t>
        </template>

    </data>
</openerp>
