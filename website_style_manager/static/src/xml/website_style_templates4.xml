<templates id="template" xml:space="preserve">

    <t t-name="website_style_manager.custom_css_modal">
        <div class="modal fade" id="oe_webpage_custom_css_modal">
            <div class="modal-dialog modal-content" style="width:1000px;">
                <div class="modal-header alert alert-info mb0">
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">x</span>
                    </button>
                    <h4 class="modal-title">Change Global Styles</h4>
                </div>
                <div class="modal-body">

                    <ul class="nav nav-tabs">
                        <li class="active"><a data-toggle="tab" href="#css_tags_tab">Styles Tags</a></li>
                        <li><a data-toggle="tab" href="#custom_css_tab">Custom CSS</a></li>
                    </ul>

                    <div class="tab-content">
                        <div id="css_tags_tab" class="tab-pane fade in active">
                        </div>
                        <div id="custom_css_tab" class="tab-pane fade">
                            <textarea id="custom_css_text" style="width:100%;height:100%;"/>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
		    <button id="cancel" data-dismiss="modal" class="btn btn-primary">Cancel</button>
		    <button id="submit_custom_css" class="btn btn-danger">Save</button>
                </div>
            </div>
        </div>
    </t>
    
</templates>