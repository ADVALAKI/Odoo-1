<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
      <record id="esms_accounts_form_view" model="ir.ui.view">
          <field name="name">eSMS Gateway Accounts</field>
          <field name="model">sms.account</field>
          <field name="arch" type="xml">
      	      <form>
      	          <group>
      	              <field name="name"/>
      	              <field name="account_gateway" widget="selection"/>
      	              <field name="priority"/>
      	              <field name="gateway_model" invisible="1"/>
      	          </group>
      	          <h2 id="gatewayhook">Gateway Settings</h2>
      	      </form>
      	  </field>
      </record>

      <record id="esms_accounts_tree_view" model="ir.ui.view">
          <field name="name">eSMS Gateway Accounts</field>
          <field name="model">sms.account</field>
          <field name="arch" type="xml">     
      	      <tree>
      	          <field name="priority"/>
      	          <field name="name"/>
      	          <field name="account_gateway"/>
      	      </tree>
      	  </field>
      </record>

      <record id="esms_action" model="ir.actions.act_window">
          <field name="name">eSMS Gateway Accounts</field>
      	  <field name="res_model">sms.account</field>
      	  <field name="view_type">form</field>
      	  <field name="view_mode">tree,form</field>
      	  <field name="help" type="html">
	      <p class="oe_view_nocontent_create">Add SMS Gateway Accounts</p>
	  </field>
      </record>      

      <menuitem id="sms_account_menu" name="Accounts" parent="esms_gateway_config_menu" action="esms_action" sequence="90"/>

    </data>
</openerp>